{
	"compilerOptions": {
		"target": "es2016",
		"module": "commonjs",
		"outDir": "./dist",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*", "node_modules/@types/node"],
	"extends": "./tsconfig.paths.json",
	"exclude": ["*/**/_backup*", "*/**/_legacy*", "*/**/_temp*"]
}
